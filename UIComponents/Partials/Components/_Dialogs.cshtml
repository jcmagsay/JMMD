@using Button = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.Button
@using Dialog = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.Dialog
@using Grid = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.GridLayout
@using Selection = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.Selection
@using Shadow = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.Shadow
@using Typography = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.Typography

<section id="dialogs" class="dialogs-section">
	<label class="@Typography.Display2">10-4 Material Dialogs</label>
	<dl>
		<dt class="@Typography.Title">Dialogs</dt>
		<dd>
			<div class="@Typography.Body1D frame-bottom">Dialogs contain text and UI controls focused on a specific task. They inform users about critical information, require users to make decisions, or involve multiple tasks.</div>
			<div class="@Typography.Body1D">There are a list of const strings that are available for use in the MaterialUiConst.cs file. You can use the following directive to access these const strings.<pre><code class="mdi-language-csharp">@Html.Raw("@using Dialog = TenFour.CommonContent.Web.Utilities.MaterialUiConst.Dialog")</code></pre></div>
			<!-- DIALOGS (GROUP 1) -->
			<div class="@Grid.Grid">
				<div class="@Grid.Col12">
					<div class="@Typography.Body2D">Basic Dialog (Long)</div>
					<div class="@Typography.Caption">@Html.Raw("@Dialog.Base (in a 12 Column Cell)")</div>
					<!-- Basic Dialog (Long)-->
					<div class="@Dialog.Base @Shadow.Dp16">
						<section class="@Dialog.Content">
							<div class="@Dialog.ContentTitle">Use 10-4 Ping?</div>
							<div class="@Dialog.ContentSupportingText">Let 10-4 use your location to help track your trucks. There will be a small surcharge for each ping to retrieve your location and track accurately.</div>
						</section>
						<section class="@Dialog.Actions">
							<div class="@Button.BtnGroup">
								<button class="@Button.FlatColorPrimary">Disagree</button>
								<button class="@Button.FlatColorPrimary">Agree</button>
							</div>
						</section>
					</div>

				</div>
			</div>

			<!-- CODE SAMPLE SECTION-->
			<section class="@Grid.Grid">
				<div class="@Grid.Col12">
