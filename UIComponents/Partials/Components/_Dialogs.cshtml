				</div>
			</section>

			<!-- DIALOGS (GROUP 2) -->
			<div class="@Grid.Grid">
				<div class="@Grid.Col6">
					<div class="@Typography.Body2D">Basic Dialog (Short)</div>
					<div class="@Typography.Caption">@Html.Raw("@Dialog.Base (in a 6 Column Cell)")</div>
					<!-- Basic Dialog (Short) -->
					<div class="@Dialog.Base @Shadow.Dp16">
						<section class="@Dialog.Content">
							<div class="@Dialog.ContentTitle">Use 10-4 Ping?</div>
							<div class="@Dialog.ContentSupportingText">Let 10-4 use your location to help track your trucks. There will be a small surcharge for each ping to retrieve your location and track accurately.</div>
						</section>
						<section class="@Dialog.Actions">
							<div class="@Button.BtnGroup">
								<button class="@Button.FlatColorPrimary">Disagree</button>
								<button class="@Button.FlatColorPrimary">Agree</button>
							</div>
						</section>
					</div>
				</div>

				<!-- Dialog with Radio Buttons-->
				<div class="@Grid.Col6">
					<div class="@Typography.Body2D">Dialog with Radio Buttons</div>
					<div class="@Typography.Caption">@Html.Raw("@Dialog.Confirm (in a 6 Column Cell)")</div>
					<div class="@Dialog.Confirm @Shadow.Dp16">
						<section class="@Dialog.Content">
							<div class="@Dialog.ContentTitle">Set your tracking method</div>
							<div class="@Dialog.ContentSupportingText">
								<label class="@Selection.Radio" for="option-1">
									<input type="radio" id="option-1" class="@Selection.RadioInput" name="options" value="1" checked>
									<span class="@Selection.RadioLabel">Manual</span>
								</label>
								<label class="@Selection.Radio" for="option-2">
									<input type="radio" id="option-2" class="@Selection.RadioInput" name="options" value="2" checked>
									<span class="@Selection.RadioLabel">10-4 Ping</span>
								</label>
								<label class="@Selection.Radio" for="option-3">
									<input type="radio" id="option-3" class="@Selection.RadioInput" name="options" value="3" checked>
									<span class="@Selection.RadioLabel">API</span>
								</label>
							</div>
						</section>
						<section class="@Dialog.Actions">
							<div class="@Button.BtnGroup">
								<button class="@Button.FlatColorPrimary">Cancel</button>
								<button class="@Button.FlatColorPrimary">Ok</button>
							</div>
						</section>
					</div>
				</div>
			</div>

			<!-- CODE SAMPLE SECTION-->
			<section class="@Grid.Grid">
				<div class="mdl-cell mdl-cell--12-col">
