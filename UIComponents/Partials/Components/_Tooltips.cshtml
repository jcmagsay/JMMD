@using Grid = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.GridLayout
@using Icon = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.Icon
@using Tooltip = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.Tooltip
@using Typography = TenFour.CommonContent.Web.Utilities.UIComponent.MaterialUi.Constants.Typography

<section id="tooltips" class="tooltips-section">
	<label class="@Typography.Display2">10-4 Material Tooltips</label>
	<dl>
		<dt class="@Typography.Headline">Tooltips</dt>
		<dd>
			<div class="@Typography.SubheadingD frame-bottom">Tooltips are labels that appear on hover and focus when the user hovers over an element with the cursor, focuses on an element using a keyboard (usually through the tab key), or upon touch (without releasing) in a touch UI. They contain textual identification for the element in question. They may also contain brief helper text regarding the function of the element. The label itself cannot receive input focus.</div>
			<div class="@Typography.Body1D">There are a list of const strings that are available for use in the MaterialUiConst.cs file. You can use the following directive to access these const strings.<pre><code class="mdi-language-csharp">@Html.Raw("@using Tooltip = TenFour.CommonContent.Web.Utilities.MaterialUiConst.Tooltip")</code></pre></div>

			<!-- TOOLTIPS -->
			<section class="@Grid.Grid">
				<div class="@Grid.Col3">
					<div class="@Typography.Body2D">Simple Tooltip</div>
					<div class="@Typography.Caption">@Html.Raw("@Tooltip.Base")</div>
					<!-- Simple Tooltip -->
					<div id="tt1" class="@Icon.Material">@Icon.Type.Add</div>
					<div class="@Tooltip.Base" for="tt1">Follow</div>
				</div>
				<div class="@Grid.Col3">
					<div class="@Typography.Body2D">Large Tooltip</div>
					<div class="@Typography.Caption">@Html.Raw("@Tooltip.Base")</div>
					<!-- Large Tooltip -->
					<div id="tt2" class="@Icon.Material">@Icon.Type.Print</div>
					<div class="@Tooltip.Large" for="tt2">Print</div>
				</div>
				<div class="@Grid.Col3">
					<div class="@Typography.Body2D">Rich Tooltip</div>
					<div class="@Typography.Caption">@Html.Raw("@Tooltip.Base")</div>
					<!-- Rich Tooltip -->
					<div id="tt3" class="@Icon.Material">@Icon.Type.CloudUpload</div>
					<div class="@Tooltip.Base" for="tt3">Upload <strong>file.zip</strong>
					</div>
				</div>
				<div class="@Grid.Col3">
					<div class="@Typography.Body2D">Multiline Tooltip</div>
					<div class="@Typography.Caption">@Html.Raw("@Tooltip.Base")</div>
					<!-- Multiline Tooltip -->
					<div id="tt4" class="@Icon.Material">@Icon.Type.Share</div>
					<div class="@Tooltip.Base" for="tt4">Share your content<br>via social media</div>
				</div>
			</section>

			<!-- CODE SAMPLE SECTION-->
			<section class="@Grid.Grid">
				<div class="@Grid.Col12">
<pre><code class="language-markup">@HttpUtility.HtmlDecode(@"<!-- Simple Tooltip -->
<div id=""tt1"" class=""icon material-icons"">add</div>
<div class=""mdl-tooltip"" for=""tt1"">Follow</div>
<div class=""@Typography.Body1D"">Large Tooltip</div>

<!-- Large Tooltip -->
<div id=""tt2"" class=""icon material-icons"">print</div>
<div class=""mdl-tooltip mdl-tooltip--large"" for=""tt2"">Print</div>
	
<!-- Rich Tooltip -->
<!-- Rich Tooltips contain HTML Markup -->
<div id=""tt3"" class=""icon material-icons"">cloud_upload</div>
<div class=""mdl-tooltip"" for=""tt3"">Upload <strong>file.zip</strong></div>

<!-- Multiline Tooltip -->
<!-- Multiline Tooltips wraps or breaks lines -->
<div id=""tt4"" class=""icon material-icons"">share</div>
<div class=""mdl-tooltip"" for=""tt4"">Share your content<br>via social media</div>")</code></pre>
				</div>
			</section>
		</dd>
	</dl>
</section>